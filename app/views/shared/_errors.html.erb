<% if obj.errors.any? %>
<div class="row">	
	<div class="error-bar-wrapper">
		<div class="col-1"></div>
		<div class="error-bar col-10">
<i class="material-icons">error</i>
			<div>
				<p class="panel-title">
					<%= pluralize(obj.errors.count, "error") %>
					prohibited this project from being saved:
				</p>
				<div class="panel-body">
					<ul>
						<% obj.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			</div>

		</div>
		<div class="col-1"></div>
	</div>
</div>
<% end %>



