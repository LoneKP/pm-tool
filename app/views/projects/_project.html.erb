<div class="col-10" >
	<% obj.each do |project| %>

	<div class="d-flex card client<%= project.color_number %>">
		<div class="d-flex flex-row justify-content-between">
			<div>
				<h6 class="title">
					<%=project.client_name %> - <%=project.project_name %>
				</h6>
			</div>
			<div class="gear-menu-wrapper">
				<div class="gear-menu client<%= project.color_number %>">
					<i class="client<%= project.color_number %> close-gear-menu material-icons close-gear-icon">close</i>
					<a class="details">
						<div>
							<i class="client<%= project.color_number %> material-icons">dashboard</i>
							<p>Details</p>
						</div>
					</a>
					<div class="client<%= project.color_number %> line"></div>
					<a class="risk-action">
						<div>
							<i class="client<%= project.color_number %> material-icons">error</i>
							<p>Add risk / action</p>
						</div>
					</a>
					<div class="client<%= project.color_number %> line"></div>
					<a class="client<%= project.color_number %> archive-project">
						<div>
							<i class="client<%= project.color_number %> material-icons">folder</i>
							<p>Archive project</p>
						</div>
					</a>
				<div class="client<%= project.color_number %> line"></div>
				
					<a>
					<%= link_to edit_project_path(project), :action => 'edit', data: { turbolinks: false } do %>
						<div>
							<i class="client<%= project.color_number %> material-icons">edit</i>
							<p>Edit project</p>
						</div>
						<% end %>
					</a>
					
					<div class="client<%= project.color_number %> line"></div>
					<a class="client<%= project.color_number %> delete-project" href="#delete-project-modal-<%= project.id %>" rel="modal:open">
						<div>
							<i class="material-icons">delete_forever</i>
							<p>Remove project</p>
						</div>
					</a>
				</div>
				<i class="open-gear-menu material-icons icon_20 client<%= project.color_number %>">settings</i>
			</div>
		</div>
		<%= completion_indicator(project) %>

		<div class="d-flex flex-row justify-content-between">
			<div class="mt-66">
				<p class="tekst"><i class="material-icons icon_12 client<%= project.color_number %>">attach_money</i><span>Sold hours:</span><%=project.hours_sold_for %> hours</p>
				<p class="tekst mt-2"><i class="material-icons icon_12 client<%= project.color_number %>">access_time</i><span>Work hours:</span> <%= project.work_hours %> hours</p>
			</div>
			<div class="wrapper">
				<div class="circle client<%= project.color_number %>">
					<h4 class="numbers client<%= project.color_number %>"><%=project.design_hours%></h4><p class="task-text client<%= project.color_number %>">Design</p>
				</div>
				<div class="circle client<%= project.color_number %>">
					<h4 class="numbers client<%= project.color_number %>"><%=project.programming_hours%></h4><p class="task-text client<%= project.color_number %>">Programming</p>
				</div>
				<div class="circle client<%= project.color_number %>">
					<h4 class="numbers client<%= project.color_number %>"><%=project.project_management_hours%></h4><p class="task-text client<%= project.color_number %>">Management</p>
				</div>
				<div class="circle client<%= project.color_number %>">
					<h4 class="numbers client<%= project.color_number %>"><%=project.meetings_hours%></h4><p class="task-text client<%= project.color_number %>">Meetings</p>
				</div>
			</div>
			<div>
				<p class="completion-percentage client<%= project.color_number %>"><%=project.completion_percentage %>%</p>
				<p class="total-time client<%= project.color_number %>"><%= project.total_time_hours %> of <%= project.work_hours %> work hours</p>
			</div>
		</div>
		<div class="d-flex flex-row justify-content-between mt-266">
			<div>
				<p class="date">Start date</p>
				<p class="tekst"><%= project.project_start_date.strftime('%d.%m.%Y') %></p>
			</div>

			<div class="d-flex flex-row justify-content-center align-items-center">
				<div class="progress-dot-active client<%= project.color_number %>"></div>
				<div class="d-flex align-items-center justify-content-between">

					<div class="progress-full d-flex align-items-center">
						<div class="progress-bar-filling client<%= project.color_number %>" role="progressbar" style="width: <%=project.completion_percentage %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
						</div>
					</div>

				</div>

				<div class="<%= project.completion_percentage >= 100 ? 'progress-dot-active-right' : 'progress-dot-inactive' %> client<%= project.color_number %>"></div>
			</div>


			<div>
				<p class="end-date">End date</p>
				<p class="tekst right-align"><%= project.project_end_date.strftime('%d.%m.%Y') %></p>
			</div>
		</div>
	</div>		

	<!--Delete modal			-->
	<div id="delete-project-modal-<%= project.id %>" class="modal">
		<div class="project-modal-header mb-3">
			<div>
				<i class="material-icons blue">delete_forever</i>
				<p class="text-24 blue">Delete project?</p>
			</div>
			<div>
				<a href="#" class="material-icons" rel="modal:close">
					<i class="material-icons icon-14">close</i>
				</a>
			</div>

		</div>
		<div class="project-modal-content">
			<p class="text-16-19%> ">If you delete a project from your portfolio it will lose all the risks and actions you have added.</p>
			<p id="id"></p>
		</div>
		<div class="project-modal-footer">
			<a href="#" rel="modal:close"><div  class="cancel">Cancel</div></a>	
			<%= link_to 'Delete', project_path(project), method: :delete, :class => 'delete-project-btn' %>
		</div>
	</div>		

	<% end %>


</div>






