<% content_for :navigation, render('layouts/custom_setup_top_bar', obj: 'Setup organisation', obj2: "My organisation doesn't user these tools") %>
<div class="setup-flow-wrapper">
  <p class="setup-headline-no-box">Connect to tools</p>
  <p class="setup-subtitle">What tools does your organisation use?</p>
  <div class="row">
    <div class="col-1"></div>
    <div class="tool-boxes col-10">
      <%= link_to "https://id.getharvest.com/oauth2/authorize?client_id=0QOx5ejoU4UkejJN6aCNXNDG&response_type=code&redirect_uri=http://localhost:3000/harvest_callback&state=" + @organisation.id.to_s do %>
      <div>
        <%= image_tag "harvest-logo-icon.png", class: "tools-logo-height"%>
      </div>
      <% end %>
      <%= link_to "https://app.asana.com/-/oauth_authorize?response_type=code&client_id=1125442721851532&redirect_uri=http://localhost:3000/asana_callback&state=" + @organisation.id.to_s do %>
      <div>
        <%= image_tag "asana-logo-icon.png", class: "tools-logo-height"%>
      </div>
      <% end %>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
    <div class="col-1"></div>
  </div>


  <div class="col-6 setup-navigation">
    <div class="inside-number">
      <div class="back-button">
        <%= link_to new_organisation_path, data: { turbolinks: false } do %>
        <p>Back</p>
        <% end %>
      </div>
      <div class="numbers-in-setup selected">
        <p class="number selected">1</p>
      </div>
      <div class="numbers-in-setup selected">
        <p class="number selected">2</p>
      </div>
      <div class="numbers-in-setup">
        <p class="number">3</p>
      </div>
      <div class="numbers-in-setup">
        <p class="number">4</p>
      </div>
      <div class="numbers-in-setup">
        <p class="number">5</p>
      </div>
      <%= link_to new_organisation_user_path, data: { turbolinks: false } do %>
      <div class="next-and-add-organisation next-button">Next</div>
      <% end %>
    </div>
  </div>


</div>