<% content_for :navigation, render('layouts/custom_setup_top_bar', obj: 'Setup user', obj2: '') %>

<div class="row">
  <div class="col-3"></div>
  <div class="create-user-box col-6">
    <div class="mt-5">
      <i class="material-icons icon-46">business</i>
    </div>
    <p class="setup-headline-box mt-300 mb-300">Create user</p>
    <div>
      <p class="setup-subtitle">
        Your E-mail
      </p>
    </div>

    <div>
      <%= form_for :user, :url => { controller: "users", action: "create"}, :html => {:class => 'edit-view-styling'} do |f| %>
      <%=	f.text_field :email %>

    </div>

  </div>

</div>
<div class="col-3"></div>
</div>

<div class="row setup-navigation">
  <div class="col-1"></div>
  <div class="back-button col-1">
    <%= link_to 'sign-in' do %>
    <p>Back</p>
    <% end %>
  </div>
  <div class="col-2"></div>
  <div class="col-4 numbers-in-setup inside-number">
    <div>
      <p>1</p>
    </div>
    <div>
      <p>2</p>
    </div>
    <div>
      <p>3</p>
    </div>
    <div class="selected">
      <p class="selected">4</p>
    </div>
    <div>
      <p>5</p>
    </div>
  </div>
  <div class="col-2"></div>
  <%= f.submit 'Next', :class => 'next-and-add-organisation col-1' %>
  <% end %>
  <div class="col-1"></div>
</div>